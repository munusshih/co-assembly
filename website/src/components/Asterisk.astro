<div class="asterisk-wrapper" id="scrollToTop">
  <svg class="asterisk" viewBox="0 0 100 100">
    <!-- Asterisk lines -->
    <g transform="scale(0.5) translate(50, 50)">
      <line x1="50" y1="10" x2="50" y2="90"></line>
      <line x1="20" y1="30" x2="80" y2="70"></line>
      <line x1="80" y1="30" x2="20" y2="70"></line>
    </g>

    <!-- Circular path -->
    <defs>
      <path
        id="circlePath"
        d="M 50,50
           m -35,0
           a 35,35 0 1,1 70,0
           a 35,35 0 1,1 -70,0"
      ></path>
    </defs>

    <!-- Rotating text -->
    <text class="circular-text">
      <textPath href="#circlePath" startOffset="0%">
        SCROLL TO TOP • SCROLL TO TOP • SCROLL TO TOP • SCROLL TO TOP •
      </textPath>
    </text>
  </svg>
</div>
<script>
  document.getElementById("scrollToTop").addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
</script>
